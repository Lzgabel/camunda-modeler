{
  "appId": "com.camunda.CamundaModeler",
  "productName": "Camunda Modeler",
  "files": [
    {
      "filter": [
        "**",
        "!**/__tests__",
        "!test",
        "!dev.js"
      ]
    }
  ],
  "afterPack": "./tasks/after-pack.js",
  "afterSign": "./tasks/after-sign.js",
  "win": {
    "target": [
      {
        "target": "zip",
        "arch": [ "x64", "ia32" ]
      }
    ],
    "extraFiles": [
      {
        "from": "resources/plugins",
        "to": "resources/plugins",
        "filter": ["**/*"]
      },
      {
        "from": "resources/element-templates",
        "to": "resources/element-templates",
        "filter": ["**/*"]
      },
      {
        "from": "resources/flags.json",
        "to": "resources/flags.json"
      }
    ]
  },
  "linux": {
    "category": "Development",
    "target": [
      {
        "target": "tar.gz",
        "arch": [ "x64" ]
      }
    ],
    "extraFiles": [
      {
        "from": "resources/plugins",
        "to": "resources/plugins",
        "filter": ["**/*"]
      },
      {
        "from": "resources/element-templates",
        "to": "resources/element-templates",
        "filter": ["**/*"]
      },
      {
        "from": "resources/flags.json",
        "to": "resources/flags.json"
      }
    ]
  },
  "mac": {
    "hardenedRuntime": true,
    "entitlements": "./build/entitlements.mac.inherit.plist",
    "target": [
      {
        "target": "dmg",
        "arch": [ "x64", "arm64" ]
      },
      {
        "target": "zip",
        "arch": [ "x64", "arm64" ]
      }
    ],
    "extraFiles": [
      {
        "from": "resources/plugins",
        "to": "MacOS/resources/plugins",
        "filter": ["**/*"]
      },
      {
        "from": "resources/element-templates",
        "to": "MacOS/resources/element-templates",
        "filter": ["**/*"]
      },
      {
        "from": "resources/flags.json",
        "to": "MacOS/resources/flags.json"
      }
    ]
  },
  "fileAssociations": [
    {
      "ext": "bpmn",
      "name": "CamundaModeler.BPMN",
      "description": "BPMN file",
      "role": "Editor",
      "mimeType": "application/bpmn"
    },
    {
      "ext": "dmn",
      "name": "CamundaModeler.DMN",
      "description": "DMN file",
      "role": "Editor",
      "mimeType": "application/dmn"
    },
    {
      "ext": "cmmn",
      "name": "CamundaModeler.CMMN",
      "description": "CMMN file",
      "role": "Editor",
      "mimeType": "application/cmmn"
    },
    {
      "ext": "form",
      "name": "CamundaModeler.FORM",
      "description": "FORM file",
      "role": "Editor",
      "mimeType": "application/camunda-form"
    }
  ],
  "npmArgs": "--workspaces=false"
}
